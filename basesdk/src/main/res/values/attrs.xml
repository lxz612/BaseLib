    <declare-styleable name="LoadingView">
        <attr name="loading_circle_color" format="color"/>
        <attr name="loading_stroke_width" format="dimension"/>
        <attr name="loading_circle_diameter" format="dimension"/>
        <attr name="loading_img_size" format="dimension"/>
        <attr name="loading_img_src" format="reference"/>
    </declare-styleable>

